<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_weight="4"
        android:background="@drawable/grid"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.85"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="1"></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="2"></ImageView>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="3"></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"></View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.85"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="4"></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="5"></ImageView>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_23"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="6"></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_31"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="7"></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_32"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="8"></ImageView>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:id="@+id/img_33"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:tag="9"></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></View>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>